<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_all"
    tools:context=".waterlevel">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tank"
        android:id="@+id/imageView17"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvl3"
     android:src="@drawable/lvl3"
        android:layout_alignTop="@+id/imageView17"
        android:layout_alignEnd="@+id/imageView17"
        android:layout_marginTop="120dp"
        android:layout_marginRight="1dp"
        android:visibility="invisible" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvl2"
        android:src="@drawable/lvl2"

        android:layout_alignTop="@+id/imageView17"
        android:layout_alignEnd="@+id/imageView17"
        android:layout_marginTop="85dp"
        android:visibility="invisible" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvl1"
android:src="@drawable/lvl1"
        android:layout_alignTop="@+id/imageView17"
        android:layout_alignEnd="@+id/imageView17"
        android:layout_marginTop="32dp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tank_text"
        android:layout_alignTop="@+id/imageView17"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:hint="loading..." />
</RelativeLayout>
